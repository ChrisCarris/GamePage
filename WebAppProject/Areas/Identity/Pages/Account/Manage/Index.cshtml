@page
@model IndexModel
@{
    ViewData["Title"] = "Mój profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div>
    <h2>
        Informacje o koncie
    </h2>
</div>
<div>
    <div class="float-container">
        <div class="float-child col-3 border-top border-bottom rounded-left">
        <div>Adres E-mail:</div>
        <div>Data rejestracji:</div>
        <div>Ostatnie logowanie do gry:</div>
        <div>Czas spędzony w grze:</div>
        </div>
        <div class="float-child col-9 border-top border-bottom rounded-right">
        <div>@Model.UserInfo.Email</div>
        <div>@Model.UserInfo.RegisterDate</div>
        <div>@Model.UserInfo.LastLogin</div>
        <div>@Model.UserInfo.InGameTime</div>
        </div>
    </div>
    <br />
    <h3>Informacje o bohaterach</h3>
    <div>
        <div class="row">
            <div class="col-5 border-top border-bottom rounded-top rounded-bottom" style="margin: 20px">
